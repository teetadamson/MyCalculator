<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tedadams.mycalculator.Calculator"
    tools:showIn="@layout/activity_calculator"
    android:background="@android:color/holo_orange_dark"
    android:layout_margin="0dp"
    android:padding="0dp">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:inputType="textPersonName"
        android:text="0"
        android:ems="10"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:id="@+id/editText"
        android:padding="0dp"
        android:background="@android:color/background_light"
        android:layout_alignParentEnd="false"
        android:gravity="bottom|right"
        android:textSize="46dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp" />

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:id="@+id/btn7"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn8"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/btn7" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn9"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn4"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/btn7"
        android:layout_alignParentStart="true" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button10"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_toEndOf="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignBottom="@+id/btn4" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button11"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:layout_below="@+id/btn8" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button14"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button16"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button14" />

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button21"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/button18"
        android:layout_toEndOf="@+id/button14"
        android:layout_alignTop="@+id/button18" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button13"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/btn4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn0"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button14"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button18" />

    <Button
        android:text="C"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button18"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button14"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button12"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_toEndOf="@+id/button21"
        android:layout_alignBottom="@+id/button21" />

    <Button
        android:text="+"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/plusbtn"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/button12"
        android:layout_toEndOf="@+id/button16"
        android:layout_below="@+id/button11" />

    <Button
        android:text="รท"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button22"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:layout_below="@+id/btn9" />

    <Button
        android:text="X"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button17"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_below="@+id/editText"/>


    <Button
        android:text="sqrt"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/sqrt"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />


</RelativeLayout>
